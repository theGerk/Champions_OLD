<UserControl x:Class="Champions.Characteristic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Champions"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="ValueColumn"></ColumnDefinition>
			<ColumnDefinition x:Name="ChacteristicsColumn"></ColumnDefinition>
			<ColumnDefinition x:Name="CostColumn"></ColumnDefinition>
			<ColumnDefinition x:Name="BaseColumn"></ColumnDefinition>
			<ColumnDefinition x:Name="PtsColumn"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<TextBox Grid.Column="0" x:Name="Value" PreviewTextInput="LimitToNumbers" LostFocus="Value_Set"></TextBox>
		<TextBlock Grid.Column="1" x:Name="Chacteristics" Text="{Binding Path=CharacteristicName}"></TextBlock>
		<TextBlock Grid.Column="2" x:Name="Cost"></TextBlock>
		<TextBlock Grid.Column="3" x:Name="Base"></TextBlock>
		<TextBox Grid.Column="4" x:Name="Pts" PreviewTextInput="LimitToNumbers" LostFocus="Pts_Set"></TextBox>
	</Grid>
</UserControl>
